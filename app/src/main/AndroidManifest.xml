<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mathgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MathGame">
        <activity
            android:name=".controller.AdminQuestionActivity"
            android:exported="false"
            android:parentActivityName=".controller.StartScreenActivity"/>
        <activity
            android:name=".controller.AdminLoginActivity"
            android:exported="false"
            android:parentActivityName=".controller.StartScreenActivity"/>
        <activity
            android:name=".controller.QuizResultActivity"
            android:exported="false"
            android:parentActivityName=".controller.StudentDetailActivity" />
        <activity
            android:name=".controller.QuizScreenActivity"
            android:exported="false" />
        <activity
            android:name=".controller.StudentDetailActivity"
            android:exported="false"
            android:parentActivityName=".controller.StartScreenActivity" />
        <activity
            android:name=".controller.StartScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>